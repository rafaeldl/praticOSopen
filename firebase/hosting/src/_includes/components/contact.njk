{# Get contact data based on segment/language #}
{% set ct = data.contact %}

<!-- Contact Section -->
<section id="contact" class="contact">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ ct.tag }}</span>
            <h2>{{ ct.title }} <span class="gradient-text">{{ ct.titleHighlight }}</span></h2>
            <p>{{ ct.subtitle }}</p>
        </div>
        <div class="contact-grid">
            <div class="contact-info">
                <div class="contact-card">
                    <div class="contact-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                    </div>
                    <div>
                        <h4>{{ ct.cards.email.title }}</h4>
                        <a href="mailto:{{ site.email }}" data-ga="generate_lead" data-ga-detail="email_link">{{ site.email }}</a>
                    </div>
                </div>
                <div class="contact-card">
                    <div class="contact-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                    </div>
                    <div>
                        <h4>{{ ct.cards.faq.title }}</h4>
                        <a href="{{ relPath }}{{ ct.cards.faq.link }}">{{ ct.cards.faq.text }}</a>
                    </div>
                </div>
                <div class="contact-card">
                    <div class="contact-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                        </svg>
                    </div>
                    <div>
                        <h4>{{ ct.cards.privacy.title }}</h4>
                        <a href="{{ relPath }}{{ ct.cards.privacy.link }}">{{ ct.cards.privacy.text }}</a>
                    </div>
                </div>
            </div>
            <form class="contact-form" action="mailto:{{ site.email }}" method="POST" enctype="text/plain">
                <div class="form-group">
                    <label for="name">{{ ct.form.name }}</label>
                    <input type="text" id="name" name="Name" required placeholder="{{ ct.form.namePlaceholder }}">
                </div>
                <div class="form-group">
                    <label for="email">{{ ct.form.email }}</label>
                    <input type="email" id="email" name="Email" required placeholder="{{ ct.form.emailPlaceholder }}">
                </div>
                <div class="form-group">
                    <label for="message">{{ ct.form.message }}</label>
                    <textarea id="message" name="Message" rows="4" required placeholder="{{ ct.form.messagePlaceholder }}"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-full">{{ ct.form.submit }}</button>
            </form>
        </div>
    </div>
</section>
