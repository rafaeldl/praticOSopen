{# Get download data based on segment/language #}
{% set dl = data.download %}

<!-- Download Section -->
<section id="download" class="download">
    <div class="container">
        <div class="download-content">
            <h2>{{ dl.title }} <span class="gradient-text">{{ dl.titleHighlight }}</span></h2>
            <p>{{ dl.text }}</p>
            <div class="download-buttons">
                <a href="{{ site.appStore }}" target="_blank" rel="noopener" class="store-button" title="{{ dl.appStore.label }} {{ dl.appStore.name }}" data-ga="select_content" data-ga-detail="app_store">
                    <svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor">
                        <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
                    </svg>
                    <div class="store-info">
                        <span class="store-label">{{ dl.appStore.label }}</span>
                        <span class="store-name">{{ dl.appStore.name }}</span>
                    </div>
                </a>
                <a href="{{ site.playStore }}" target="_blank" rel="noopener" class="store-button" data-ga="select_content" data-ga-detail="play_store">
                    <svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor">
                        <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 0 1-.61-.92V2.734a1 1 0 0 1 .609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 0 1 0 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
                    </svg>
                    <div class="store-info">
                        <span class="store-label">{{ dl.playStore.label }}</span>
                        <span class="store-name">{{ dl.playStore.name }}</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="download-phone">
            <div class="phone-glow"></div>
            <div class="phone-mockup large">
                <img class="theme-dark" src="{{ relPath }}assets/screenshots/{{ langCode }}/dark/login.png" alt="PraticOS App" loading="lazy">
                <img class="theme-light" src="{{ relPath }}assets/screenshots/{{ langCode }}/light/login.png" alt="PraticOS App" loading="lazy">
            </div>
        </div>
    </div>
</section>
