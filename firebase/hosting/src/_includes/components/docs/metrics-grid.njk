{# Metrics Grid Component - Grid of metric cards with icons #}
{# Usage: {% include "components/docs/metrics-grid.njk" with {metrics: [...]} %} #}
<div class="metrics-grid">
    {% for metric in metrics %}
    <div class="metric-card">
        <div class="metric-icon {{ metric.color }}">
            {{ metric.icon | safe }}
        </div>
        <div class="metric-info">
            <h4>{{ metric.title }}</h4>
            <p>{{ metric.description }}</p>
        </div>
    </div>
    {% endfor %}
</div>
