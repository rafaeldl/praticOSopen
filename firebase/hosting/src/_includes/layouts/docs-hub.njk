---
layout: layouts/base.njk
navbarScrolled: true
docsStyles: true
pageType: docs
---
{% set docsData = docs.hub[langCode] %}

<!-- Page Header -->
<section class="docs-hero">
    <div class="hero-bg">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
    </div>
    <div class="container">
        <div class="docs-hero-content">
            <div class="badge">{{ docsData.badge }}</div>
            <h1><span class="gradient-text">{{ docsData.title }}</span></h1>
            <p class="hero-subtitle">{{ docsData.subtitle }}</p>

            <div class="docs-search">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="M21 21l-4.35-4.35"></path>
                </svg>
                <input type="text" placeholder="{{ docsData.searchPlaceholder }}" id="docs-search-input">
            </div>
        </div>
    </div>
</section>

<!-- Docs Categories -->
<section class="docs-categories">
    <div class="container">
        <div class="categories-grid">
            {% for category in docsData.categories %}
            {% if category.comingSoon %}
            <div class="category-card coming-soon">
            {% else %}
            <a href="{{ category.href }}" class="category-card">
            {% endif %}
                <div class="category-icon">
                    {{ category.icon | safe }}
                </div>
                <div class="category-content">
                    <h3>{{ category.title }}</h3>
                    <p>{{ category.description }}</p>
                    <span class="category-link">{{ category.linkText }}</span>
                </div>
                {% if category.badge %}
                <div class="category-badge{% if category.comingSoon %} soon{% endif %}">{{ category.badge }}</div>
                {% endif %}
            {% if category.comingSoon %}
            </div>
            {% else %}
            </a>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

<!-- Quick Links -->
<section class="docs-quick-links">
    <div class="container">
        <h2>{{ docsData.quickLinksTitle }}</h2>
        <div class="quick-links-grid">
            {% for link in docsData.quickLinks %}
            <a href="{{ link.href }}" class="quick-link">
                <div class="quick-icon">
                    {{ link.icon | safe }}
                </div>
                <div>
                    <h4>{{ link.title }}</h4>
                    <p>{{ link.description }}</p>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>

<script>
    // Simple search filter
    const searchInput = document.getElementById('docs-search-input');
    const cards = document.querySelectorAll('.category-card');

    searchInput.addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase();
        cards.forEach(card => {
            const text = card.textContent.toLowerCase();
            if (text.includes(query) || query === '') {
                card.style.display = '';
            } else {
                card.style.display = 'none';
            }
        });
    });
</script>
