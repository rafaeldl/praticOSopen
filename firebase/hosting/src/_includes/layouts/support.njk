---
layout: layouts/base.njk
navbarScrolled: true
pageType: support
---
{# Get support data #}
{% set supportData = support[langCode] %}

<!-- Page Header -->
<header class="page-header">
    <div class="container">
        <h1>{{ supportData.title }} <span class="gradient-text">{{ supportData.titleHighlight }}</span></h1>
        <p>{{ supportData.subtitle }}</p>
    </div>
</header>

<!-- Support Content -->
<main class="page-content">
    <div class="container">
        <!-- Support Options -->
        <div class="support-grid">
            {% for card in supportData.cards %}
            <div class="support-card">
                <div class="support-icon" style="background: {{ card.iconBg }};">
                    {% if card.icon == 'email' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="{{ card.iconColor }}" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    {% elif card.icon == 'question' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="{{ card.iconColor }}" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                    {% elif card.icon == 'docs' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="{{ card.iconColor }}" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    {% endif %}
                </div>
                <h3>{{ card.title }}</h3>
                <p>{{ card.text }}</p>
                <a href="{{ card.linkHref }}"{% if card.linkExternal %} target="_blank" rel="noopener"{% endif %}>
                    {{ card.linkText }}
                    {% if card.linkExternal %}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="7" y1="17" x2="17" y2="7"></line>
                        <polyline points="7 7 17 7 17 17"></polyline>
                    </svg>
                    {% else %}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                    {% endif %}
                </a>
            </div>
            {% endfor %}
        </div>

        <!-- Contact Methods -->
        <div class="contact-methods">
            <h3>{{ supportData.contactTitle }}</h3>

            {% for item in supportData.contactItems %}
            <div class="contact-item">
                <div class="contact-item-icon">
                    {% if item.icon == 'chat' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF6F0F" stroke-width="2">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                    </svg>
                    {% elif item.icon == 'warning' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF6F0F" stroke-width="2">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                        <line x1="12" y1="9" x2="12" y2="13"></line>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                    {% elif item.icon == 'feedback' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF6F0F" stroke-width="2">
                        <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                    </svg>
                    {% elif item.icon == 'user' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#FF6F0F" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    {% endif %}
                </div>
                <div class="contact-item-content">
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.text }}</p>
                    {% for link in item.links %}
                    <a href="{{ link.href }}">{{ link.text }}</a>{% if not loop.last %} | {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- FAQ Preview -->
        <div class="faq-preview">
            <h3>{{ supportData.faqPreviewTitle }}</h3>

            {% for item in supportData.faqPreviewItems %}
            <div class="faq-quick-item">
                <h4>{{ item.question }}</h4>
                <p>{{ item.answer }}</p>
            </div>
            {% endfor %}

            <div style="margin-top: 24px; text-align: center;">
                <a href="{{ faqLink }}" class="btn btn-outline">{{ supportData.viewAllFaq }}</a>
            </div>
        </div>

        <!-- Additional Resources -->
        <div class="need-help-section">
            <h3>{{ supportData.needMoreHelp }}</h3>
            <p>{{ supportData.teamReady }}</p>
            <a href="mailto:praticos@rafsoft.com.br" class="btn btn-primary">{{ supportData.contactUs }}</a>
        </div>
    </div>
</main>
