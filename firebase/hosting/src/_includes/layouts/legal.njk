---
layout: layouts/base.njk
navbarScrolled: true
---
{# Get legal page data #}
{% set legalData = legal[pageType][langCode] %}

<!-- Page Header -->
<header class="page-header">
    <div class="container">
        <h1>{{ legalData.title }} <span class="gradient-text">{{ legalData.titleHighlight }}</span></h1>
        <p>{{ legalData.subtitle }}</p>
    </div>
</header>

<!-- Legal Content -->
<main class="page-content">
    <div class="container">
        {% for section in legalData.sections %}
        <div class="content-section">
            <h2>{{ section.title }}</h2>
            {% if section.paragraphs %}
                {% for para in section.paragraphs %}
                <p>{{ para | safe }}</p>
                {% endfor %}
            {% endif %}
            {% if section.list %}
            <ul>
                {% for item in section.list %}
                <li>{{ item | safe }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
        {% endfor %}

        <p style="color: var(--text-muted); margin-top: 48px; font-size: 0.875rem;">{{ legalData.lastUpdated }}</p>
    </div>
</main>
