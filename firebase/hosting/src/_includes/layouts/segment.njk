---
layout: layouts/base.njk
pageType: segment
---
{# Get segment data based on language #}
{% set segmentData = segments[segmentSlug] %}
{% set data = segmentData[langCode] %}

<!-- Hero Section -->
<section id="hero" class="hero">
    <div class="hero-bg">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
    </div>
    <div class="hero-container">
        <div class="hero-content">
            <div class="badge">{{ data.hero.badge }}</div>
            <h1>{{ data.hero.title }} <span class="gradient-text">{{ data.hero.titleHighlight }}</span></h1>
            <p class="hero-subtitle">{{ data.hero.subtitle }}</p>
            <div class="hero-cta">
                <a href="#download" class="btn btn-primary btn-large" data-ga="select_content" data-ga-detail="hero_download_cta">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    {{ data.hero.ctaPrimary }}
                </a>
                {% set waMsg = site.whatsapp.messages[langCode] | default(site.whatsapp.messages.pt) %}
                <a href="https://wa.me/{{ site.whatsapp.number }}?text={{ waMsg | urlencode }}" target="_blank" rel="noopener" class="btn btn-whatsapp btn-large" data-ga="generate_lead" data-ga-detail="whatsapp_hero">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                    {{ data.hero.ctaWhatsapp }}
                </a>
            </div>
            <div class="hero-stats">
                <div class="stat">
                    <span class="stat-number">{{ data.hero.stats.users.value }}</span>
                    <span class="stat-label">{{ data.hero.stats.users.label }}</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat">
                    <span class="stat-number">{{ data.hero.stats.orders.value }}</span>
                    <span class="stat-label">{{ data.hero.stats.orders.label }}</span>
                </div>
                <div class="stat-divider"></div>
                <div class="stat">
                    <span class="stat-number">{{ data.hero.stats.rating.value }}</span>
                    <span class="stat-label">{{ data.hero.stats.rating.label }}</span>
                </div>
            </div>
        </div>
        <div class="hero-phones">
            <div class="phone phone-back">
                <div class="phone-frame">
                    <img src="{{ relPath }}assets/screenshots/dashboard.png" alt="Dashboard PraticOS" loading="lazy">
                </div>
            </div>
            <div class="phone phone-front">
                <div class="phone-frame">
                    <img src="{{ relPath }}assets/screenshots/home.png" alt="Work Orders List" loading="lazy">
                </div>
            </div>
        </div>
    </div>
    <div class="hero-scroll">
        <span>Scroll</span>
        <div class="scroll-indicator"></div>
    </div>
</section>

<!-- Problems Section -->
<section class="segment-problems">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.problems.tag }}</span>
            <h2>{{ data.problems.title }} <span class="gradient-text">{{ data.problems.titleHighlight }}</span></h2>
            <p>{{ data.problems.subtitle }}</p>
        </div>
        <div class="segment-problems-grid">
            {% for item in data.problems.items %}
            <div class="segment-problem-card">
                <div class="segment-problem-icon">{{ item.icon }}</div>
                <h3>{{ item.title }}</h3>
                <p>{{ item.text }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Solutions Section -->
<section class="segment-solutions">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.solutions.tag }}</span>
            <h2>{{ data.solutions.title }} <span class="gradient-text">{{ data.solutions.titleHighlight }}</span></h2>
            <p>{{ data.solutions.subtitle }}</p>
        </div>
        <div class="segment-solutions-grid">
            {% for item in data.solutions.items %}
            <div class="segment-solution-card">
                <div class="segment-solution-icon">{{ item.icon }}</div>
                <h3>{{ item.title }}</h3>
                <p>{{ item.text }}{% if item.highlight %} <strong>{{ item.highlight }}</strong>{% endif %}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Checklist Section -->
<section id="checklist" class="segment-checklist">
    <div class="container">
        <div class="segment-checklist-container">
            <div class="segment-checklist-content">
                <span class="section-tag">{{ data.checklist.tag }}</span>
                <h2>{{ data.checklist.title }} <span class="gradient-text">{{ data.checklist.titleHighlight }}</span></h2>
                <p>{{ data.checklist.text }}</p>
                <a href="#download" class="btn btn-primary" data-ga="select_content" data-ga-detail="segment_checklist_cta">{{ data.checklist.cta }}</a>
            </div>
            <div class="segment-checklist-preview">
                <h4>{{ data.checklist.previewTitle }}</h4>
                {% for item in data.checklist.items %}
                <div class="segment-checklist-item">
                    <span class="icon">{{ item.icon }}</span>
                    <span>{{ item.text }}</span>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
{% include "components/features-segment.njk" %}

{# WhatsApp Assistant Section #}
{% include "components/whatsapp-section.njk" %}

<!-- Testimonial Section -->
<section class="segment-testimonial">
    <div class="container">
        <div class="testimonial-card">
            <p class="testimonial-quote">"{{ data.testimonial.quote }}"</p>
            <div class="testimonial-author">
                <span class="testimonial-name">{{ data.testimonial.name }}</span>
                <span class="testimonial-role">{{ data.testimonial.role }}</span>
            </div>
            <div class="testimonial-metric">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                    <polyline points="17 6 23 6 23 12"></polyline>
                </svg>
                {{ data.testimonial.metric }}
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section id="faq-section" class="segment-faq">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.faq.tag }}</span>
            <h2>{{ data.faq.title }} <span class="gradient-text">{{ data.faq.titleHighlight }}</span></h2>
            <p>{{ data.faq.subtitle }}</p>
        </div>
        <div class="faq-grid">
            {% for item in data.faq.items %}
            <div class="faq-item">
                <h4>{{ item.question }}</h4>
                <p>{{ item.answer }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Pricing Section -->
{% include "components/pricing.njk" %}

<!-- Download Section -->
{% include "components/download.njk" %}

<!-- Contact Section -->
{% include "components/contact.njk" %}
