---
layout: layouts/base.njk
pageType: feature
---
{# Get feature data based on language #}
{% set data = features[featureSlug][langCode] %}
{% set waMsg = site.whatsapp.messages[langCode] | default(site.whatsapp.messages.pt) %}

{# SVG icon map #}
{% macro featureIcon(name, size) %}
{% set s = size | default(24) %}
{% if name == "chat" %}
<svg width="{{ s }}" height="{{ s }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
</svg>
