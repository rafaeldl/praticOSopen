<!-- Smart Media Section -->
<section class="feature-section feature-section-primary">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.media.tag }}</span>
            <h2>{{ data.media.title }} <span class="gradient-text">{{ data.media.titleHighlight }}</span></h2>
            <p>{{ data.media.subtitle }}</p>
        </div>
        <div class="feature-media-grid">
            {% for item in data.media.items %}
            <div class="feature-media-card">
                <span class="feature-media-emoji">{{ item.emoji }}</span>
                <h4>{{ item.title }}</h4>
                <p class="media-input">{{ item.text }}</p>
                <div class="feature-media-arrow">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <polyline points="19 12 12 19 5 12"></polyline>
                    </svg>
                </div>
                <span class="media-output">{{ item.result }}</span>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Highlights Section -->
<section class="feature-section feature-section-secondary">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.highlights.tag }}</span>
            <h2>{{ data.highlights.title }} <span class="gradient-text">{{ data.highlights.titleHighlight }}</span></h2>
        </div>
        <div class="feature-highlights-grid">
            {% for item in data.highlights.items %}
            <div class="feature-highlight-card">
                <div class="feature-highlight-icon">
                    {{ featureIcon(item.icon, 22) }}
                </div>
                <div>
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.text }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="feature-faq">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.faq.tag }}</span>
            <h2>{{ data.faq.title }} <span class="gradient-text">{{ data.faq.titleHighlight }}</span></h2>
        </div>
        <div class="faq-grid">
            {% for item in data.faq.items %}
            <div class="faq-item">
                <h4>{{ item.question }}</h4>
                <p>{{ item.answer }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- FAQ Structured Data -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for item in data.faq.items %}
    {
      "@type": "Question",
      "name": "{{ item.question }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ item.answer }}"
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>

