<!-- Features Grid -->
<section class="feature-section feature-section-primary">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">{{ data.features.tag }}</span>
            <h2>{{ data.features.title }} <span class="gradient-text">{{ data.features.titleHighlight }}</span></h2>
            <p>{{ data.features.subtitle }}</p>
        </div>
        <div class="feature-grid">
            {% for item in data.features.items %}
            <div class="feature-grid-card{% if loop.first %} card-highlight{% endif %}">
                <div class="feature-grid-icon icon-{{ item.color }}">
                    {{ featureIcon(item.icon) }}
                </div>
                <h3>{{ item.title }}</h3>
                <p>{{ item.text }}</p>
                {% if item.highlight %}
                <span class="feature-card-badge">{{ item.highlight }}</span>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</section>

