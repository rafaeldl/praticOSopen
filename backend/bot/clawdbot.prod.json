{
  "session": {
    "dmScope": "per-channel-peer"
  },
  "auth": {
    "profiles": {
      "google:default": {
        "provider": "google",
        "mode": "api_key"
      }
    }
  },
  "tools": {
    "profile": "full"
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "google/gemini-3-flash-preview",
        "fallbacks": [
          "google/gemini-2.5-flash"
        ]
      },
      "workspace": "/root/.clawdbot",
      "contextPruning": {
        "softTrimRatio": 0.3,
        "hardClearRatio": 0.55,
        "softTrim": {
          "maxChars": 3500,
          "headChars": 1000,
          "tailChars": 1500
        },
        "hardClear": {
          "enabled": true,
          "placeholder": "[older context cleared]"
        }
      }
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "auth": {
      "mode": "token",
      "token": "${CLAWDBOT_TOKEN}"
    },
    "controlUi": {
      "allowInsecureAuth": true
    }
  },
  "channels": {
    "whatsapp": {
      "selfChatMode": false,
      "dmPolicy": "open",
      "allowFrom": ["*"]
    }
  },
  "plugins": {
    "entries": {
      "whatsapp": {
        "enabled": true
      },
      "telegram": {
        "enabled": false
      }
    }
  },
  "skills": {
    "entries": {
      "praticos": {
        "env": {
          "PRATICOS_API_URL": "${PRATICOS_API_URL}",
          "PRATICOS_API_KEY": "${PRATICOS_API_KEY}"
        }
      }
    }
  },
  "messages": {
    "tts": {
      "auto": "tagged",
      "provider": "edge",
      "edge": {
        "enabled": true,
        "voice": "pt-BR-AntonioNeural",
        "lang": "pt-BR",
        "outputFormat": "audio-24khz-48kbitrate-mono-mp3",
        "rate": "+0%",
        "pitch": "+0%"
      }
    }
  }
}
