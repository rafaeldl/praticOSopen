{
  "auth": {
    "profiles": {
      "google:default": {
        "provider": "google",
        "mode": "api_key"
      }
    }
  },
  "tools": {
    "profile": "full"
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "gemini-2.5-flash-lite",
        "fallbacks": [
          "google/gemini-2.5-flash",
          "google/gemini-3-flash-preview"
        ]
      },
      "workspace": "/root/.clawdbot"
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "auth": {
      "mode": "token",
      "token": "praticos-dev-token-change-me"
    },
    "controlUi": {
      "allowInsecureAuth": true
    }
  },
  "channels": {
    "whatsapp": {
      "selfChatMode": false,
      "dmPolicy": "allowlist",
      "allowFrom": [
        "+5548984090709"
      ]
    }
  },
  "plugins": {
    "entries": {
      "whatsapp": {
        "enabled": true
      },
      "telegram": {
        "enabled": false
      }
    }
  },
  "skills": {
    "entries": {
      "praticos": {
        "env": {
          "PRATICOS_API_URL": "${PRATICOS_API_URL}",
          "PRATICOS_API_KEY": "${PRATICOS_API_KEY}"
        }
      }
    }
  },
  "messages": {
    "tts": {
      "auto": "always",
      "provider": "edge",
      "edge": {
        "enabled": true,
        "voice": "pt-BR-FranciscaNeural",
        "lang": "pt-BR",
        "outputFormat": "audio-24khz-48kbitrate-mono-mp3",
        "rate": "+0%",
        "pitch": "+0%"
      }
    }
  }
}
